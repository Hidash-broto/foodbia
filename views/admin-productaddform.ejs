<div class="container-fluid pt-4 px-4">
    <div class="row ">
        <div class="col-xl-2">

        </div>
<div class="col-sm-12 col-xl-6 ml-5">
  <% if(error){ %>
  <h5 class="text-danger"><%= error %></h5>
  <% } %>
    <form class="mt-5" id="checkout-form" method="post" action="/addProduct" enctype="multipart/form-data">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputEmail4">Product Name</label>
            <input required type="text" class="form-control" id="inputEmail4" placeholder="Product Name" value="" name="name">
          </div>
          <div class="form-group col-md-6">
            <label for="inputPassword4">Price</label>
            <input required type="text" class="form-control" id="inputPassword4" placeholder="price" name="price">
          </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputEmail4">Image</label>
              <input type="file" name="image" multiple>
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Type</label>
              <input required type="text" class="form-control" id="inputPassword4" placeholder="Type" name="type">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputState">Category</label>
                <select required id="inputState" class="form-control" name="category">
                  <option selected>Choose...</option>
                  <% cat.forEach((cat)=>{ %> 
                  <option><%= cat.name %> </option>
                  <% }) %> 
                </select>
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Flavour</label>
              <input required type="text" class="form-control" id="inputPassword4" placeholder="Flavour" name="flavour">
            </div>
          </div>
          <a href="/addProduct"><button type="submit" class="btn btn-primary">Add</button></a>
       </form>
    </div>
</div>
</div>
    
    <style>
      .body{
        background-color: black;
      }
    </style>