<div class="container-fluid pt-4 px-4">
    <div class="row">
      <div class="col-xl-2"></div>
      <div class="col-sm-12 col-xl-9 ml-5">
        <form method="post" action="/postEditBanner" enctype="multipart/form-data">
            <input name="id" hidden type="text" value="<%=banner._id%>" id="">
            <div class="form-group">
              <label for="exampleInputEmail1">Banner Name</label>
              <input value="<%=banner.name%>" minlength="3" required name="name" type="text" class="form-control"  placeholder="Enter Name">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Image</label>
              <input  name="image" type="file" class="form-control">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Url</label>
                <input value="<%=banner.url%>" required name="url" type="text" class="form-control" id="" placeholder="Url">
            </div>
            <div class="form-group">
                <label for="">Discription</label>
                <input value="<%=banner.discription%>" required name="discription" type="text" class="form-control form-control-lg" id="colFormLabelLg" placeholder="Discription">
              </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
        </div>
        </div>